<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_menu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@color/colorWhite"
                android:clickable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appname"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/actionbar_profile"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:layout_gravity="end"
                    android:src="@drawable/main_profile"/>
            </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_walk"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_walk"
            android:clickable="true">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="4dp"
                android:layout_marginTop="19dp">
            </com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:id="@+id/tv_detail_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:text="1220"
                android:textColor="@color/colorWhite"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginRight="5dp"
                android:text="steps"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_nodata"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="4dp"
                android:layout_marginTop="33dp"
                android:text="No\ndata"
                android:textSize="23dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle"
                android:visibility="invisible"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_sleep"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_sleep"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="28dp"
                android:text=" 5"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="43dp"
                android:textColor="@color/colorWhite"
                android:text="hr"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="209dp"
                android:layout_marginTop="28dp"
                android:textColor="@color/colorWhite"
                android:text="40"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="43dp"
                android:textColor="@color/colorWhite"
                android:text="mins"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/colorWhite"
                android:text="2:00AM"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="80dp"
                android:layout_marginRight="38dp"
                android:textColor="@color/colorWhite"
                android:text="7:40AM"
                android:textSize="10dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/main_map"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:layout_marginRight="60dp"
                android:text="Salaya"
                android:textColor="@color/colorWhite"
                android:textSize="33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginRight="60dp"
                android:text="13:00"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>