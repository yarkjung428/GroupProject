<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/box"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sleep_dialog"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hrs"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal|bottom"/>
        <TextView
            android:id="@+id/tv_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mins"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/tv_sleepdate"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="SleepDate"
            android:layout_marginLeft="40dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text=" - "
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_wakeupdate"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="WakeupDate"
            android:layout_marginLeft="160dp"
            android:clickable="true"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sleeptime"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="SleepTime"
            android:layout_marginLeft="60dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text=" - "
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_wakeuptime"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="WakeupTime"
            android:layout_marginLeft="140dp"
            android:clickable="true"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/box"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Cancel"
            android:textSize="20dp"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:background="@color/colorCancel"/>
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Save"
            android:textSize="20dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSave"/>
    </LinearLayout>
</LinearLayout>